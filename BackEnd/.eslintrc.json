{
    "env": {
      "es6": true,
      "jasmine": true,
      "node": true,
      "browser": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 8
    },
    "rules": {
      "arrow-body-style": 2,
      "brace-style": 2,
      "camelcase": [2, {"properties": "never"}],
      "complexity": ["error", 6],
      "eol-last": "warn",
      "eqeqeq": "error",
      "global-require": "error",
      "handle-callback-err": "warn",
      "indent": [1, "tab", {"SwitchCase": 1}],
      "linebreak-style": ["warn", "unix"],
      "max-depth": ["error", 3],
      "max-lines": ["error", 100],
      "max-lines-per-function": ["error", 15],
      "max-nested-callbacks": ["error", 4],
      "max-params": ["error", 5],
      "max-statements": ["error", 10],
      "no-cond-assign": 2,
      "no-dupe-args": "error",
      "no-empty-function": 3,
      "no-multiple-empty-lines": "warn",
      "no-extra-parens": 2,
      "no-multi-str": 1,
      "no-unexpected-multiline": 2,
      "no-unreachable": 2,
      "no-self-assign": 2,
      "no-trailing-spaces": 1,
      "no-undef": 2,
      "no-unused-vars": 1,
      "no-var": 2,
      "prefer-arrow-callback": 1,
      "prefer-const": 2,
      "quotes": [1, "single"],
      "semi": [1, "never"],
      "comma-dangle": [1,"always"],
      "no-dupe-keys": 1,
      "no-duplicate-case": 1,
      "no-empty": 1,
      "no-extra-semi": 1,
      "no-func-assign": 1,
      "no-irregular-whitespace": 1,
      "curly": [1,"all"],
      "no-fallthrough": 2,
      "no-multi-spaces": 1,
      "no-redeclare": 1
      },
      "overrides": [{
          "files": [ "*.test.js", "*.spec.js" ],
          "rules": {
              "max-lines-per-function": "off",
              "max-lines": "off",
              "max-statements": "off",
              "no-magic-numbers": "off"
          }
      }]
  }